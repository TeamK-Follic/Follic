<!DOCTYPE html>
<html>
  <head>
    <title>Follic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.6.3/css/all.css' integrity='sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/' crossorigin='anonymous'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel='stylesheet'>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.6.3/css/all.css' integrity='sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/' crossorigin='anonymous'>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="clearfix">
      <h2>follic</h2>
      <% if user_signed_in? %>

      <nav>
        <ul>
          <li>
            <div class="nav-item">
             <%= link_to(items_path, class:'nav-link') do %>
              <i class="glyphicon glyphicon-cd"></i><p>CD</p>
             <% end %>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <%= link_to(artists_path, class:'nav-link') do %>
               <i class="fas fa-users"></i><p>アーティスト</p>
              <% end %>
            </div>
          </li>
          <li>
            <div class="nav-item">
             <a class="nav-link" href="/carts">
              <i class="fas fa-cart-plus"></i><p>カート</p>
             </a>
            </div>
         </li>
         <li>
           <div class="nav-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
           </div>
         </li>
         <li>
           <div class="nav-item">
            <%= link_to(user_path(current_user.id), class:'nav-link') do %>
              <i class="fas fa-user-tag"></i><p>マイページ</p>
            <% end %>
           </div>
         </li>
         <li>
           <div class="nav-item">
            <a class="nav-link" href="/following_artists">
              <i class="fas fa-user-check"></i><p>フォローアーティスト</p>
            </a>
          </div>
         </li>
         <li></li>
        </ul>
      </nav>

        

      <!-- 管理者権限 -->
      <% elsif manager_signed_in? %>

      <nav>
        <ul>
          <li>
            <div>
              <%= link_to(items_path, class:'nav-link') do %>
                <i class="glyphicon glyphicon-cd"></i><p>CD</p>
              <% end %>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <%= link_to(artists_path, class:'nav-link') do %>
                <i class="fas fa-users"></i><p>アーティスト</p>
              <% end %>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <a class="nav-link" href="/carts"></a>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <%= link_to "ログアウト", destroy_manager_session_path, method: :delete %>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <%= link_to(histories_path, class:'nav-link') do %>
                <i class="far fa-file-alt"></i><p>受注一覧</p>
              <% end %>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <%= link_to(users_path, class:'nav-link') do %>
                <i class="far fa-address-card"></i><p>会員一覧</p>
              <% end %>
            </div>
          </li>
        </ul>
      </nav>
        
      <!-- 未ログインユーザー -->
      <% else %>

      <nav>
        <ul>
          <li>
            <div class="nav-item">
              <%= link_to(items_path, class:'nav-link') do %>
                <i class="glyphicon glyphicon-cd"></i><p>CD</p>
              <% end %>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <%= link_to(artists_path, class:'nav-link') do %>
                <i class="fas fa-users"></i><p>アーティスト</p>
              <% end %>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <a class="nav-link" href="/users/about">
                <i class="fas fa-question-circle"></i><p>follicとは</p>
              </a>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <a class="nav-link" href="/users/sign_up">
                <i class="fas fa-user-plus"></i><p>新規登録</p>
              </a>
            </div>
          </li>
          <li>
            <div class="nav-item">
              <a class="nav-link" href="/users/sign_in">
                <i class="fas fa-sign-in-alt"></i><p>ログイン</p>
              </a>
            </div>
          </li>
        </ul>
      </nav>

      <% end %>
    </header><!-- /header -->
    <%= yield %>
  </body>
</html>
