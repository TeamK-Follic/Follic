<div class="form">
	<h3 class="form-header">マイページ編集</h3>
	<%= form_for(@user) do |f| %>
		<div class="form-area">
				<table class="user-table">
					<tr class="mypage">
						<td class="mypage-item">名前</td>
						<td class="mypage-item"><%= f.text_field :name %></td>
					</tr>
					<tr class="mypage">
						<td class="mypage-item">名前（カナ)</td>
						<td class="mypage-item"><%= f.text_field :name_kana %></td>
					</tr>
					<tr class="mypage">
						<td class="mypage-item">郵便番号</td>
						<td class="mypage-item"><%= f.text_field :postal_code %></td>
					</tr>
					<tr>
						<td class="mypage-item">住所</td>
						<td class="mypage-item"><%= f.text_area :address, size: "40×60" %></td>
					</tr>
					<tr class="mypage">
						<td class="mypage-item">電話番号</td>
						<td class="mypage-item"><%= f.text_field :phone_number %></td>
					</tr>
					<tr class="mypage">
						<td class="mypage-item">メールアドレス</td>
						<td class="mypage-item"><%= f.text_field :email %></td>
					</tr>
				</table>
		</div>
		<div class="form-footer">
		<%= f.submit "登録", class:"btn btn-primary" %>
	<% end %>
			<%= link_to "戻る", user_path(@user), class:"btn btn-default" %>

			<% if @user.deleted_user != 1 %>
				<%= link_to "会員情報の削除",unsubscribe_user_path(@user), method: :patch, class:"btn btn-danger" %>
			<% end %>
		</div>
</div>