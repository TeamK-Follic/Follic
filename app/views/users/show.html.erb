<div class="form">
	<h3 class="mypage-form-header">
		<% if manager_signed_in? %>
			<%= @user.name %>さんのマイページ
		<% elsif user_signed_in? %>
			<%= current_user.name %>さんのマイページ
		<% end %>
	</h3>
	<div class="form-area">
		<table class="user-table">
			<tr class="mypage">
				<td class="mypage-item">名前</td>
				<td class="mypage-item"><%= @user.name %></td>
			</tr>
			<tr class="mypage">
				<td class="mypage-item">名前（カナ）</td>
				<td class="mypage-item"><%= @user.name_kana %></td>
			</tr>
			<tr class="mypage">
				<td class="mypage-item">郵便番号</td>
				<td class="mypage-item"><%= @user.postal_code %></td>
			</tr>
			<tr class="mypage">
				<td class="mypage-item">住所</td>
				<td class="mypage-item"><%= @user.address %></td>
			</tr>
			<tr class="mypage">
				<td class="mypage-item">電話番号</td>
				<td class="mypage-item"><%= @user.phone_number %></td>
			</tr>
			<tr class="mypage">
				<td class="mypage-item">メールアドレス</td>
				<td class="mypage-item"><%= @user.email %></td>
			</tr>
		</table>
		<div class="mypage-edit">
			<%= link_to "会員情報の編集", edit_user_path(@user.id), class:"btn btn-default" %>
		</div>
	</div>
	<div class="form-footer">
		<%= link_to "購入履歴", histories_path, class:"btn btn-primary" %>
	</div>
</div>