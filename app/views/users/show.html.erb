<div class="form">
	<div class="form-header">
		<h3>マイページ</h3>
	</div>
	<div class="form-area">
		<table>
			<tr>
				<td>名前</td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td>名前（カナ）</td>
				<td><%= @user.name_kana %></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td><%= @user.postal_code %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td><%= @user.address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td><%= @user.phone_number %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td><%= @user.email %></td>
			</tr>
		</table>
	</div>
	<div class="form-footer">
		<%= link_to "会員情報の編集", edit_user_path(@user.id), class:"btn btn-primary" %>
		<%= link_to "購入履歴", histories_path, class:"btn btn-default" %>
	</div>
</div>