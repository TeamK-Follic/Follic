<h3>アーティスト詳細</h3>
<div class="center-block">
  <div class="artist-title">
    <span class="artist-name">
      <%= @artist.name %>
    </span>

    <% if user_signed_in? %>

      <% if @artist.followed_by?(current_user) %>
        <%= link_to artist_following_artists_path(@artist), method: :delete do %>
          <span class="d-btn follow-btn">フォローを外す</span>
        <% end %>

      <% else %>
        <%= link_to artist_following_artists_path(@artist), method: :post do %>
          <span class="d-btn follow-btn">フォローする</span>
        <% end %>
      <% end %>

    <% elsif manager_signed_in? %>
        <%= link_to edit_artist_path do %><i class="fas fa-cogs edit-btn"></i><% end %>
    <% else %>
    <% end %>
  </div>

  <div class="artist-image"><%= attachment_image_tag @artist, :image, :fill, 300, 300 %><%= @artist.intro %></div>

  <h4 class="artist-show-item">CD情報
    <% if manager_signed_in? %>
      <%= link_to "新規追加", new_item_path(@artist.id), class:"d-btn new-btn" %>
    <% end %>
  </h4>
  <% @items.each do |item| %>
    <div class="thumbnail-contents">
      <%= link_to (item_path(item.id)) do %>
        <%= attachment_image_tag item, :image, class:"contents-item" %>
        <font size="4"><b><%= item.title %></b></font>
        <div><%= item.artist.name %></div>
        <div class="price-stock">
          <p><%= item.price %>円</p>
          <% if item.stock == 0 %>
            <span>売切</span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="more-btn"><%= link_to 'もっと見る', "/items?utf8=✓&q%5Bartist_name_cont%5D=#{@artist.name}" %></div>

  <h4 class="artist-show-item">イベント情報
    <% if manager_signed_in? %>
      <%= link_to 'イベント追加', new_event_path(@artist.id), class:"d-btn new-btn" %>
    <% end %>
  </h4>

  <div id ="events">
    <%= render 'artists/eventlist', events: @events %>
  </div>

  

</div>
