<h3>フォローアーティスト一覧</h3>
  <div class="container">
    <div class="row">

      <!-- CD一覧 -->
      <div class="col-xs-4">
        <div class="f-list-wrapper">
          <%= render 'following_artists/items', items: @items %>
        </div>
      </div>

      <!-- アーティスト一覧 -->
      <div class="col-xs-4">
        <div class="f-list-wrapper">

          <% @fartists.each do |fartist| %>
            <%= link_to (following_artist_path(fartist.id)) do %>
              <div class="f-list clearfix">
                <div class="f-list-thumbnail">
                  <%= attachment_image_tag fartist.artist, :image, :fill, 40, 40, class: "img-circle", fallback: "no_image.png"%>
                </div>

                <p class="f-list-text">
                  <%= fartist.artist.name %>
                </p>
              </div>
            <% end %>
          <% end %>

        </div>
      </div>


      <!-- イベント一覧 -->
      <div class="col-xs-4">
        <div class="f-list-wrapper">
          <%= render 'following_artists/events', events: @events %>
        </div>
      </div>


    </div>
  </div>
