<% if events.nil? %>
  <p>アーティストを選択してください。</p>
<% else %>
  <% @events.each do |event| %>
    <%= link_to event_path(event.id) do %>
      <div class="f-list clearfix">
        <div class="f-list-thumbnail">
          <%= attachment_image_tag event.artist, :image, :fill, 60, 60, fallback: "no_image.png" %>
        </div>
        <p class="f-list-text">
          <%= event.name %>
        </p>
      </div>
    <% end %>
  <% end %>
<% end %>