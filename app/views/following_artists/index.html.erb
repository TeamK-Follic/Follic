<h3>フォローアーティスト一覧</h3>
  <div class="container">
    <div class="row">

      <!-- CD一覧 -->
      <div class="col-xs-4">
        <div class="f-list-wrapper">
          <%= link_to items_path(@item) do %>
            <%= render 'following_artists/items', items: @items %>
          <% end %>
        </div>
      </div>

      <!-- アーティスト一覧 -->
      <div class="col-xs-4">
        <div class="f-list-wrapper">

          <% @artists.each do |artist| %>
            <%= link_to following_artists_path do %>
              <div class="f-list clearfix">
                <div class="f-list-thumbnail">
                  <%= attachment_image_tag @artist, :image, :fill, 40, 40 %>
                </div>
                <p class="f-list-text">
                  <%= @artist.name %>
                </p>
              </div>
            <% end %>
          <% end %>

        </div>
      </div>


      <!-- イベント一覧 -->
      <div class="col-xs-4">
        <div class="f-list-wrapper">
          <%= link_to events_path do %>
            <%= render 'following_artists/events', events: @events %>
          <% end %>
        </div>
      </div>


    </div>
  </div>
