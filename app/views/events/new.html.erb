<h3>イベント新規追加</h3>

<table>
  <%= form_for(@event) do |f| %>
    <tr>
      <td>イベント名</td>
      <td><%= f.text_field :name, placeholder:"イベント名" %></td>
    </tr>

    <tr>
      <td>アーティスト名</td>
      <td><%= f.hidden_field :artist_id, value:"#{@artist.id}" %><%= @artist.name %></td>
    </tr>

    <tr>
      <td>開始日時</td>
      <td><%= f.text_field :datetime, placeholder:"開始日時" %></td>
    </tr>

    <tr>
      <td>イベント紹介文</td>
      <td><%= f.text_area :detail, placeholder:"イベント紹介文"  %></td>
    </tr>

    <tr>
      <td colspan="2">
        <%= link_to '戻る', artists_path, class:"d-btn" %> <%= f.submit '保存' %>
      </td>
    </tr>

  <% end %>
</table>