<h3>イベント情報編集</h3>
<table>
  <%= form_for(@event) do |f| %>
    <tr>
      <td>イベント名</td>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td>アーティスト名</td>
      <td><%= f.text_field :artist_id %></td>
    </tr>

    <tr>
      <td>開始日時</td>
      <td><%= f.text_field :datetime %></td>
    </tr>

    <tr>
      <td>イベント紹介文</td>
      <td><%= f.text_area :detail %></td>
    </tr>

    <tr>
      <td>
        <%= link_to '戻る', artists_path, class:"d-btn" %> <%= f.submit '保存', class:"d-btn" %>
      </td>
    </tr>

  <% end %>
 </table>
