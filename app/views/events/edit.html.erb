<div class="event">
  <%= form_for(@event) do |f| %>
  <div class="evant-header">
    <h3>イベント情報編集</h3>
  </div>
  <div class="event-area">
  <table>
      <tr>
        <td>イベント名</td>
        <td><%= f.text_field :name %></td>
      </tr>

      <tr>
        <td>アーティスト名</td>
        <td><%= f.text_field :artist_id %></td>
      </tr>

      <tr>
        <td>開始日時</td>
        <td><%= f.text_field :datetime %></td>
      </tr>

      <tr>
        <td>イベント紹介文</td>
        <td><%= f.text_area :detail %></td>
      </tr>
  </table>
  </div>
  <div>
    <%= f.submit '保存', class:"btn btn-primary" %>
    <%= link_to '戻る', artists_path, class:"btn btn-dafault" %>
  </div>
  <% end %>
</div>